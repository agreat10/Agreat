@model Agreat.Models.Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить категорию</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row m-1">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 ">
                        <input asp-for="Name" disabled class="form-control" />
                        
                    </div>
                </div>
                <div class="form-group row m-1">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" disabled class="form-control" />
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col-4 ">
                            <input type="submit" class="btn btn-danger w-100" value="Удалить" />
                        </div>
                        <div class="col-4 ">
                            <a asp-action="Index" class="btn btn-success w-100"> <i class="fa-solid fa-right-from-bracket"></i></a>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>

    </div>
</form>
@section Scripts{
    @{
        <param name="_ValidationScriptsPartial" />
    }
}
