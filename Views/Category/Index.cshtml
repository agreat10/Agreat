@model IEnumerable<Agreat.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список категорий</h2>
            
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Создать новую категорию
            </a>


        </div>
        
    </div>
    <br/> 
    <br/>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" archive="width:100%">
            <thead>
                <tr>
                    <th>
                        Имя категории
                    </th>
                    <th>
                        Номер отображения
                    </th>
                    <th>
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var el in Model)
                {
                    <tr>
                        <td width="50%">@el.Name</td>
                        <td width="30%">@el.DisplayOrder</td>
                        <td ></td>
                    </tr>
                }
            </tbody>
        
        </table>
    }
    else
    {
        <p>Категорий не существует</p>
    }

</div>

